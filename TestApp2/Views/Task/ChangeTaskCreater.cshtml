@model TestApp2.Models.Task

@{
    ViewData["Title"] = "Change Status Creater";
}

<h1>Change Task Creater</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeTaskCreater">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskID" />
            <div class="form-group">
                <label asp-for="TaskCreaterID" class="control-label"></label>
                <select asp-for="TaskCreaterID" class="form-control" asp-items="ViewBag.TaskCreaterID"></select>
